.avatar {
  border-radius: 100rpx;
  box-sizing: border-box;
  border: 10rpx solid #ffffff;
}

.avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  padding: 50rpx;
}

.ranking-wrapper {
  padding: 20rpx;
  width: 100%;
  border-radius: 30rpx;
  box-sizing: border-box;
  border: 5rpx solid #ffffff;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.ranking-title {
  text-align: center;
}

.ranking-detail {
  display: flex;
}

.ranking-detail-left {
  flex: 1;
}

.ranking-detail-right {
  flex: 1;
  text-align: right;
}

.profile-container {
  background: #7fd6af;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 1100rpx;
  color: #ffffff;
}

.profile-authorize {
  width: 90%;
}

.profile-detail {
  padding: 20rpx;
}

.feedback {
  font-size: 28rpx;
  padding-top: 80rpx;
}
