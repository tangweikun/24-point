/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.card {
  display: flex;
  align-items: center;
  justify-content: center;
  color: red;
  width: 140rpx;
  height: 140rpx;
}

.operator {
  color: red;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.operator-wrapper {
  display: flex;
  width: 90%;
  justify-content: space-between;
}

.card-wrapper {
  display: flex;
  width: 90%;
  margin-bottom: 40rpx;
  justify-content: space-between;
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}