.avatar {
  width: 200rpx;
  height: 200rpx;
  padding: 50rpx;
}

.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #3868af;
}

.rule {
  position: fixed;
  left: 40rpx;
  top: 40rpx;
  font-size: 24rpx;
  background: #6ddac8;
  color: #ffffff;
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
}

.gameplay {
  position: fixed;
  right: 40rpx;
  top: 40rpx;
  font-size: 24rpx;
  background: #6ddac8;
  color: #ffffff;
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
}

.home-circle {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: 8rpx solid #6ddac8;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 50rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.home-circle-disable {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: 8rpx solid #e5e5e5;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 50rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.home-circle-wrapper {
  display: flex;
  width: 440rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 300rpx;
}

.footer {
  position: fixed;
  bottom: 30rpx;
  font-size: 30rpx;
  text-align: center;
  width: 80%;
}

.ad-wrapper {
  position: fixed;
  bottom: 0;
}
