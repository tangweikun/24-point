<view class="container">
  <view class='wrapper'>
    <view class='card-wrapper'>
      <button
        wx:for="{{cards}}"
        wx:key="{{index}}"
        disabled="{{item.isDisabled}}"
        class="{{currentCard && currentCard.position === index ? 'card-active' : 'card-normal'}}"
        bindtap='selectCardOrOperator'
        id="{{item.value}}"
        data-value="{{item.value}}"
        data-index="{{index}}"
        data-type="card"
      >
        {{item.value}}
      </button>
    </view>

    <view class='operator-wrapper'>
      <button
        type="{{currentOperator === item ? 'warn' : 'default'}}"
        disabled="{{isReady}}"
        wx:for="{{operators}}"
        wx:key="{{index}}"
        class='operator'
        bindtap='selectCardOrOperator'
        id="{{item}}"
        data-value="{{item}}"
        data-index="{{index}}"
        data-type="operator"
      >
        {{item}}
      </button>
    </view>
  </view>
  
  <view class='expression-wrapper'>
    <text
      class='expression-text'
      wx:for="{{expression}}"
      wx:key="{{index}}"
    >
      {{item}}
    </text>
  </view>
  <view class="usermotto" bindtap='reset'>
    <text class="user-motto">重置</text>
  </view>
</view>
