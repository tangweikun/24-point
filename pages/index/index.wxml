  <view class='wrapper'>
    <view class='card-wrapper'>
      <button
        wx:for="{{cards}}"
        wx:key="{{index}}"
        disabled="{{item.isDisabled}}"
        class='card'
        bindtap='selectCardOrOperator'
        id="{{item.value}}"
        data-value="{{item.value}}"
        data-index="{{index}}"
        data-type="card"
      >
        {{item.value}}
      </button>
    </view>

    <view class='operator-wrapper'>
      <button
        disabled="{{isReady}}"
        wx:for="{{operators}}"
        wx:key="{{index}}"
        class='operator'
        bindtap='selectCardOrOperator'
        id="{{item}}"
        data-value="{{item}}"
        data-index="{{index}}"
        data-type="operator"
      >
        {{item}}
      </button>
    </view>
  </view>
  
  <view>
    {{expression}}
  </view>

  <view wx:if="{{isReady}}">
    {{answer}}
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
