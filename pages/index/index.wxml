<view>
  <view class="score">
    <text>
      总得分：{{totalOfCorrectAnswers}}
    </text>
    <text>
      累计答题：{{totalOfAnswers}}
    </text>
  </view>


  <view wx:if="{{isFinish}}" class='expression-wrapper'>
    <text class='expression-text'>
      {{currentCard.value === 24 ? '🎉回答正确' : '☹️再接再厉'}}
    </text>
  </view>

  <view wx:else class='wrapper'>
    <view class='card-wrapper'>
      <view
        wx:for="{{cards}}"
        wx:key="{{index}}"
        class="card-{{item.state}}"
        bindtap="selectCard"
        id="{{item.value}}"
        data-value="{{item.value}}"
        data-index="{{index}}"
      >
        <view wx:if="{{item.alias[0] !== 0 || !item.alias[1] }}" class="integer">
          {{item.alias[0]}}
        </view>
        <view class="fractional" wx:if="{{item.alias[1]}}">
          <view class="numerator">
            {{item.alias[1]}}
          </view>
          <view class="division">
            -
          </view>
          <view class="denominator">
            {{item.alias[2]}}
          </view>
        </view>
      </view>
    </view>

    <view class='operator-wrapper'>
      <button
        type="{{currentOperator === item ? 'warn' : 'default'}}"
        disabled="{{isReady}}"
        wx:for="{{operators}}"
        wx:key="{{index}}"
        class='operator'
        bindtap='selectOperator'
        id="{{item}}"
        data-value="{{item}}"
        data-index="{{index}}"
      >
        {{item}}
      </button>
    </view>
  </view>

  <view class="footer">
    <view class='reset-or-skip' bindtap='skip'>下一题</view>
    <view wx:if="{{!isFinish}}" class='reset-or-skip' bindtap='reset'>重置</view>
  </view>

</view>
