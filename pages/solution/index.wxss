.solution-answer {
  padding: 80rpx;
}

.solution-cards-wrapper {
  display: flex;
  width: 80%;
  justify-content: space-between;
  flex-wrap: wrap;
}

.solution-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.solution-card-normal {
  color: #ffffff;
  background-color: #6ddac8;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin: 8px;
}

.solution-card-active {
  color: #ffffff;
  background-color: green;
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 40rpx;
  margin: 12px;
}

.solution-solution-wrapper {
  display: flex;
  width: 80%;
  justify-content: space-between;
  flex-wrap: wrap;
  height: 200rpx;
}
