@import '../../style/common/gameplay.wxss';

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx 0 0;
}

.expression-wrapper {
  display: flex;
  justify-content: center;
  font-size: 50rpx;
  height: 760rpx;
  flex-direction: column;
}

.footer {
  padding: 20rpx;
}

.challenge-header {
  justify-content: space-between;
  width: 70%;
  display: flex;
  padding: 0 0 120rpx;
}

.challenge-record {
  font-size: 40rpx;
  color: #6ddac8;
  padding: 40rpx;
  align-self: center;
}

.challenge-recommend {
  font-size: 40rpx;
  color: #6ddac8;
  padding: 0 0 60rpx;
  align-self: center;
}

.button-wrapper {
  display: flex;
  justify-content: space-around;
  margin-bottom: 100rpx;
  margin-top: 100rpx;
}

.ad-wrapper {
  position: fixed;
  bottom: 0;
}
