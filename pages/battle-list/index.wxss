.scroll-wrapper {
  height: 900rpx;
  width: 90%;
}

.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #6379cc;
  padding-top: 50rpx;
}

.ranking-card-wrapper {
  /* height: 200rpx; */
  width: 100%;
  background: #6ddac8;
  color: #ffffff;
  padding: 20rpx 20rpx;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.bottom {
  display: flex;
}

.top {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}

.date {
  width: 100%;
}

.myInfo {
  display: flex;
  flex: 1;
  align-items: center;
}

.rivalInfo {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
}

.rivalInfo-text-wrapper {
  margin-right: 10rpx;
  text-align: right;
}

.myInfo-text-wrapper {
  margin-left: 10rpx;
}

.small-font {
  font-size: 30rpx;
}

.big-font {
  font-size: 50rpx;
}
