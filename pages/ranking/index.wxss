.home-circle {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: 8rpx solid #6ddac8;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 50rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.home-circle-disable {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: 8rpx solid #e5e5e5;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 50rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.wrapper {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 80rpx;
}

.scroll-wrapper {
  height: 1000rpx;
  width: 80%;
}

.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #3868af;
  padding-top: 50rpx;
}

.tab-wrapper {
  display: flex;
  width: 80%;
}

.tab-left {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  width: 50%;
  background: #3868af;
  box-sizing: border-box;
  border-right: 1rpx solid rgba(255, 255, 255, 0.4);
  border-top-left-radius: 10rpx;
}

.tab-active {
  color: #ffffff;
}

.tab-right {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  width: 50%;
  background: #3868af;
  box-sizing: border-box;
  border-left: 1rpx solid rgba(255, 255, 255, 0.4);
  border-top-right-radius: 10rpx;
}

.tab-normal {
  color: rgba(255, 255, 255, 0.4);
}
