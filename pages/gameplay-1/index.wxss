.operator-wrapper {
  display: flex;
  width: 84%;
  justify-content: space-between;
}

.card-wrapper {
  flex-grow: 1;
  display: flex;
  width: 440rpx;
  margin-bottom: 40rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx 0 80rpx;
}

.expression-wrapper {
  display: flex;
  justify-content: center;
  font-size: 50rpx;
  height: 760rpx;
  flex-direction: column;
}

.expression-text {
  margin-right: 15rpx;
}

.numerator {
  height: 40rpx;
  line-height: 40rpx;
}

.denominator {
  height: 40rpx;
  line-height: 40rpx;
}

.fractional {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.integer {
  font-size: 50rpx;
}

.division {
  height: 8rpx;
  line-height: 8rpx;
}

.score {
  font-size: 22rpx;
  padding-left: 40rpx;
}

.footer {
  margin-top: 100rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.challenge-header {
  justify-content: space-between;
  width: 70%;
  display: flex;
  padding: 0 0 120rpx;
}

.challenge-record {
  font-size: 40rpx;
  color: #6ddac8;
  padding: 40rpx;
  align-self: center;
}

.challenge-recommend {
  font-size: 40rpx;
  color: #6ddac8;
  padding: 0 0 60rpx;
  align-self: center;
}

.button-wrapper {
  display: flex;
  justify-content: space-around;
  margin-bottom: 100rpx;
  margin-top: 120rpx;
}

.card {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  background-color: #6ddac8;
  border-radius: 30rpx;
}

.normal {
  background-color: #6ddac8;
}

.active {
  background-color: green;
}

.disable {
  background-color: #e5e5e5;
}
